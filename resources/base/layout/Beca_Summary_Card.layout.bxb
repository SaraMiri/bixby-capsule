layout-macro-def (beca-summary-card) {
    params {
      param (beca) {
        type (Beca)
        min (Optional) max (One)
      }
      param (titleLabel) {
        type (viv.core.Text)
        min (Optional) max (One)
      }
    }
    content {
      
          cell-card {
            slot1 {
              image {
                shape (Square)
                url("[#{value(beca.Image[0].url)}]")
              }
            }
            slot2 {
              content {
                primary {
                  template ("[#{raw(titleLabel)}: ][#{value(beca.becaName)}]")
                }
                
              }
            }
            slot3 {
              label {
                value {
                  template ("")
                }
              }
            }
          }
    }
  }